%h1 Listing timelogs

%table
  %thead
    %tr
      %th Uni module
      %th Minutes
      %th Description
      %th
      %th
      %th

  %tbody
    - @timelogs.each do |timelog|
      %tr
        %td= timelog.uni_module
        %td= timelog.minutes
        %td= timelog.description
        %td= link_to 'Show', uni_module_timelog_path(timelog.uni_module, timelog)
        %td= link_to 'Edit', edit_uni_module_timelog_path(timelog.uni_module, timelog)
        %td= link_to 'Destroy', uni_module_timelog_path(timelog.uni_module, timelog), method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Timelog', new_uni_module_timelog_path(@uni_module)