.login-container
  .login
    .gt-card.gt-form
      %h2 Forgot your password?
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          = f.label :email
          = f.email_field :email, autofocus: true, autocomplete: "email"
        .actions
          = f.submit "Send me reset password instructions"

        .center

    %div
      .center
        = link_to "Sign in", new_session_path(resource_name), class: 'unstyle-link font-secondary center'
        %span.font-secondary or
        = link_to "Sign up", new_registration_path(resource_name), class: 'unstyle-link font-secondary center'

