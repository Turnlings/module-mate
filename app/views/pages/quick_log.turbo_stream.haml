  = turbo_stream.replace "year_time_chart" do 
    = turbo_frame_tag "year_time_chart" do
      = render partial: 'shared/time_chart', locals: { subject: @ql_year, time_path: -> { time_year_path(id: @ql_year.id, cumulative: params[:cumulative], date_since: params[:date_since]) }, date_since: params[:date_since], form_url: year_path(@ql_year), turbo_frame_id: "year_time_chart" }

