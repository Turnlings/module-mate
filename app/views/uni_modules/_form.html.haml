.gt-form
  = form_for @uni_module do |f|
    - if @uni_module.errors.any?
      #error_explanation
        %h2= "#{pluralize(@uni_module.errors.count, "error")} prohibited this uni_module from being saved:"
        %ul
          - @uni_module.errors.full_messages.each do |message|
            %li= message
    .field
      = f.label :semester_ids, "Semesters"
      = f.collection_check_boxes :semester_ids, current_user.semesters, :id, :name do |b|
        .checkbox
          = b.check_box
          = "#{b.object.year.name} / #{b.object.name}"
    - if current_user.semesters.empty?
      %span.font-secondary.text-danger You currently have no semesters. Please create one under the relevant year to continue.
    .field
      = f.label :code
      = f.text_field :code
    .field
      = f.label :name
      = f.text_field :name
    .field
      = f.label :credits
      = f.number_field :credits

    .actions
      = f.submit 'Save'